{% extends "admin.home.layout.twig" %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}  
<div class="form-container">
    <form  method="post" enctype="multipart/form-data">
        <div class="form-section-title">
            <span>摄影信息</span>
            <div class="ad-line" style="margin-top: 5px;"></div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <label for="name">标题</label>
                    <input type="text" name="title" class="form-control" value="{{ photoModel.title }}"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <label for="name">描述</label>
                    <textarea name='description'  rows="5">{{ photoModel.description }}</textarea>
                </div>
            </div>
        </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6">
                <label for="name">图片</label>
                <input type="file" name="media" class="form-control" />
            </div>
        </div>
    </div>
        <div class="ad-line"></div>
        <div class="form-group text-right">
            <div class="row">
                <div class="col-sm-6">
                <button type="submit" class="btn btn-gray btn-lg btn-pad-lg" id="save-button">保存</button>
                </div>
            </div>
        </div>
    </form>
</div>
