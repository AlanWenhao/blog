{% extends "admin.home.layout.twig" %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <div class="form-container">
	<table class="table table-hover">
            <thead>
                <tr>
                    <th class="sortable" style="width: 20%">姓名</th>
                    <th class="sortable" style="width: 30%">邮箱</th>
                    <th class="sortable" style="width: 30%">标题</th>
                    <th class="sortable" style="width: 20%">查看/删除</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>{{ contact.name }} </td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.title }}</td>
                    <td>
                        <a href="/admin/contact/view?id_contact={{ contact.id_contact }}">查看</a>
                        <span>/</span>
                        <a class="table-del-icon" url="/admin/contact/delete?id_contact={{ contact.id_contact}}" href="javascript:;">删除</a>
                    </td>
                </tr>
                {% endfor %}  
            </tbody>
	</table>
</div>

<script type="text/javascript">
$(document).ready(function(){
        $('.table-del-icon').click(function(){
                var sector = $(this);
                showPop('Delete Contact!', 'Are you sure you want to delete this contact?', 'Yes', 'No', function(){
                        var url = sector.attr('url');
                        window.location.href=url;	
                }, closePop);
        });
});
</script>
{% endblock %}
