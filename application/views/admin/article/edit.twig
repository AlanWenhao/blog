{% extends "admin.home.layout.twig" %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}  
<div class="form-container">
    <form role="form" method="POST" id="article-form">
        <div class="form-section-title">
            <span>文章信息</span>
            <div class="ad-line" style="margin-top: 5px;"></div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <label for="name">标题</label>
                    <input type="text" name="article[title]" class="form-control" value="{{ articleModel.title }}"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                 <div class="col-sm-6">
                    <label for="year">作者</label>
                    <input type="text" name="article[author]" class="form-control"  value="{{ articleModel.author }}"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <label for="job">类型</label>
                    <select class="form-control" name="article[type]">
                        <option value="技术文章">技术文章</option>
                        <option value="其他文章">其他文章</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label for="job">发布时间</label>
                    <input type="text" name="article[post]" class="form-control" {% if articleModel.post %}value="{{ articleModel.post }}"{% endif %} id="datetimepicker"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                 <div class="col-sm-6">
                    <label for="year">文章摘要</label>
                    <textarea class="form-control" name="article[abstract]" rows="8" >{{ articleModel.abstract }}</textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-10">
                    <script id="container" name="article[description]" type="text/plain">{{ articleModel.description|raw }}</script>
                </div>
            </div>
        </div>
        <div class="ad-line"></div>
        <div class="form-group text-right">
            <div class="row">
                <div class="col-sm-6">

                <button type="button" class="btn btn-gray btn-lg btn-pad-lg" id="save-button">保存</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript" src="/public/plugins/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/public/plugins/ueditor/ueditor.all.js"></script>
<script type="text/javascript">
var selected = [];
$(document).ready(function(){
    var ue = UE.getEditor('container');
    $('#datetimepicker').datetimepicker({
        format: 'yyyy-mm-dd',
        minView: "month"
    });
    $("#save-button").click(function () {
        $("#article-form").submit();
    })
});
</script>
{% endblock %}